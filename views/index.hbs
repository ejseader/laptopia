      <div class="row gap-2">
        {{#each data as |data|}}
          <div class="card" style="width: 18rem;">
            <div class="card-image" style="background-image: url({{data.filepath}})"></div>
            <div class="card-body">
              <h5 class="card-title">{{data.heading}} - ${{data.price}}</h5>
              <p class="card-text">Brand: {{data.brand}}<br />
                Model: {{data.model}}<br />
                OS: {{data.oper_sys}}<br />
                Condition: {{data.condition}}<br />
                Price: ${{data.price}}<br />
                Description: {{data.description}}</p>
              <div class="d-grid">  
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target=".listingModal-{{data.id}}">View Listing</a>
              </div>
            </div>
            </div>
        {{/each}}
      </div>

    <!-- Modal -->
    {{#each data as |data|}}
    <div class="modal fade modal-xl listingModal-{{data.id}}" tabindex="-1" aria-labelledby="listingModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-header">
            <h1 class="modal-title fs-5" class="listingModalLabel">{{data.heading}} - ${{data.price}}</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="container-fluid">
              <div class="row">
                <div class="col-4 d-grid gap-2">
                  <img src="{{data.filepath}}" class="card-img-top" alt={{data.heading}}>
                  <button class="btn btn-success" href="#">Buy Now</button>
                  <button class="btn btn-primary" href="#">Contact Seller</button>
                </div>
                <div class="col-8">
                  Brand: {{data.brand}}<br />
                  Model: {{data.model}}<br />
                  OS: {{data.oper_sys}}<br />
                  Condition: {{data.condition}}<br />
                  Price: ${{data.price}}<br />
                  Description: {{data.description}}</p>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
